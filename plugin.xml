<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-judopay-googlepay"
		version="0.0.1"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns="http://apache.org/cordova/ns/plugins/1.0">
	<name>Square</name>
	<js-module name="Square"
			   src="www/square.js">
		<clobbers target="cordova.plugins.square" />
	</js-module>
	<platform name="android">
		<config-file parent="/*/application" target="AndroidManifest.xml">
			<queries>
    			<package android:name="com.squareup" />
			</queries>
		</config-file>
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="Square">
				<param name="android-package" value="com.plugin.dynamify.Square"/>
			</feature>
		</config-file>
		<source-file src="src/android/Square.java" target-dir="src/com/plugin/Square" />
		<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
	</platform>
</plugin>
